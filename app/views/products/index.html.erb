<div class="w-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-center items-center">
    <h1 class="text-4xl p-5">Products</h1>
  </div>

  <div class="container mx-auto px-5 py-2">
    <div class="-m-1 flex flex-wrap md:-m-2">
      <% @products.each do |product| %>
        <div class="flex w-1/4 flex-wrap">
          <%= render product %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-center">
    <%= link_to 'New product', new_product_path, class: "rounded bg-primary-100 px-6 pb-2 pt-2.5 uppercase leading-normal text-primary-700 content-around" %>
  </div>
</div>
